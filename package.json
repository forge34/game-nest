{
  "name": "game-forge",
  "version": "1.0.0",
  "description": "game library project , kinda similar to steam",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:client": "pnpm --filter ./packages/client dev",
    "dev:server": "pnpm --filter ./packages/server dev",
    "test:server": "pnpm --filter ./packages/server test",
    "db:push": "pnpm --filter ./packages/server db:push",
    "db:reset": "pnpm --filter ./packages/server db:push --force-reset",
    "db:generate": "pnpm --filter ./packages/server generate && pnpm build:types",
    "build:types": "pnpm --filter ./packages/shared build"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "zod": "^4.1.5"
  }
}
